<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        card_view:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/list_card_view">

            <ImageView
                android:id="@+id/Logo_Interv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/sands_of_time"
                android:tag="image_tag"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/bg_circle" />


            <TextView
                android:id="@+id/Oggetto_Interv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="3"
                android:text="Oggetto Intervento"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14sp"
                card_view:layout_constraintLeft_toRightOf="@+id/Logo_Interv"
                card_view:layout_constraintTop_toBottomOf="@+id/DataAgg_Interv" />

            <TextView
                android:id="@+id/Stato_Interv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif"
                android:text="Stato Intervento"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                card_view:layout_constraintLeft_toLeftOf="@+id/Oggetto_Interv"
                card_view:layout_constraintTop_toBottomOf="@+id/Oggetto_Interv" />

            <TextView
                android:id="@+id/Aggiornamento_Interv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Aggiornamento Condomini Intervento"
                card_view:layout_constraintTop_toBottomOf="@+id/Logo_Interv"
                android:layout_marginLeft="24dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="16dp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/DataAgg_Interv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="Data Agg Interv"
                android:textSize="12sp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/IDTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                card_view:layout_constraintRight_toLeftOf="@+id/DataAgg_Interv"
                card_view:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
